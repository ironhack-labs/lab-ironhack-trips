<h2>My trips</h2>

<% if (tripList.length === 0) { %>
  <h3> You donâ€™t have any rooms yet. </h3>
  <a href="/my-trips/new"> Add Your First Room </a>
<% } else { %>
  <ul>
    <% tripList.forEach((oneTrip) => { %>
      <li>
        <h3> <%= oneTrip.name %> </h3>
        <img src="<%= oneTrip.pic_path %>">
        <p> <%= oneTrip.destination %> </p>
        <p> <%= oneTrip.description %> </p>
        <a href="/my-trips/edit/<%= oneTrip._id %>">
          Edit
        </a>
        <br />
        <a href="/my-trips/delete/<%= oneTrip._id %>">
          Delete
        </a>
      </li>
    <% }) %>
  </ul>
<% } %>
