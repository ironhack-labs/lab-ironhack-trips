<div class="container-fluid">
    <div class="home-heading text-center row">
      <div class="home-heading-wrapper">
        <h1>Trip diary</h1>
        <p>Create a diary about your trips and share it with your friends to let them know your adventures</p>
        <a class="btn btn-default" href="#">Read their stories</a>
      </div>
    </div>
  </div>

  <div class="campaign-row row">
      <h3 class="text-center">You may be interested in...</h3>
      <% trips.forEach((trip) => { %>
        <div class="col-sm-3 home-campaign-box">
          <img src="<%= trip.image %>">
          <div class="campaign-info-wrapper">
            <a class="title" href="/trip/<%= trip._id %>">
              <strong><%= trip.destination %></strong>
            </a><br>
            by <span class="light-text"><%= trip.user_id.username %></span><br>
            <span class="light-text description"><%= trip.description %></span>
          </div>
        </div>
      <%  }) %>
    </div>