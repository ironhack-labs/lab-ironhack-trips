<div class="container">
    <div class="row">
      <h1>Hello <b><%= user.username %></b></h1>
      <div class="col-sm-6 centered-form">
        <form action="trips/new" method="post" enctype="multipart/form-data">
          <h2>Add a New Post</h2>
          <div class="form-group">
            <label for="destination">Trip destination</label>
            <input type="text" name="destination" class="form-control">
          </div>
          <div class="form-group">
            <label for="pic_path">Image</label>
            <input type="file" name="pic_path" class="form-control">
          </div>
          <div class="form-group">
            <label for="description">Trip description</label>
            <textarea type="text" name="description" class="form-control" rows="20" cols="50">Enter here the description of your Trip...</textarea>
          </div>
          <button type="submit">Submit Trip</button>
        </form>
      </div>
    </div>
  </div>