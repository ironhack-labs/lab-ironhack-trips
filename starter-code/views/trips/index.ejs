<div class="container-fluid">
        <div class="home-heading text-center row">
          <div class="home-heading-wrapper">
            <h1>Get inspired by others trips...</h1>
            <p>Go and wander around the world!!</p>
            <a class="btn btn-default" href="#">Read their stories</a>
          </div>
        </div>
      </div>

      <div class="campaign-row row">
          <h3 class="text-center">See through others experiences</h3>
          <% trips.forEach((trip) => { %>
            <div class="col-sm-3 home-campaign-box">
              <img src="<%= trip.image %>">
              <div class="campaign-info-wrapper">
                <a class="title" href="/my-trips/<%= trip._id %>">
                  <strong><%= trip.destination %></strong>
                </a><br>
                by <span class="light-text"><%= trip.user_id.user_name %></span><br>
                <span class="light-text description"><%= trip.description %></span>
              </div>
            </div>
          <%  }) %>
        </div>



      