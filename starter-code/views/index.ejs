    <% } else { %>
      <h2>Hola <%= user.username %></h2>
      <img src="/images/descarga.jpeg" alt=""/>
    </br>
      <a href="/private">Ver a los simpson</a>
      <a href="/onlyme?id=<%= user._id %>">Onlyme</a>
