<h1>My Trips</h1>
<h3>Hello, <%= user.displayName %> </h3>

<a href="/my-trips/new">Add A New Trip</a>
<a href="/profile/<%=user.id%>">Your Profile</a>

<h2>Past Trips</h2>
<%trips.forEach( (trip) => {%>
   <div class='tripWidget'>
     <h4>
       <%= trip.destination %>
     </h4>
     <p>
       <%= trip.description %>
      </p>
      <a href="/my-trips/edit/<%=trip._id%>">Edit Trip</a>
      <a href="/my-trips/delete/<%=trip._id%>">Delete Trip</a>
    </div> 
  <%})%>