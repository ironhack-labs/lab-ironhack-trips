<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 centered-form">
      <h2>Signup</h2>

      <form action="/auth/signup" method="POST">
        <div class="form-group">
        <label for="username">Username</label>
        <input id="username" type="text" name="username" placeholder="Username" class="form-control">
      </div>
        <div class="form-group">
        <label for="password">Password</label>
        <input id="password" type="password" name="password" placeholder="Your password" class="form-control">
      </div>

        <% if (typeof message !== "undefined") { %>
          <div class="error-message">
            <%= message %>
          </div>
          <% } %>
            <br>
            <br>

            <button type="submit" class="btn btn-success">Create account</button>

            <p class="account-message">
              Do you already have an account?
              <a href="./login">Login</a>
            </p>
      </form>
    </div>
  </div>
</div>